#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <set>
#include <map>
#include <algorithm>
using namespace std;


int main() 
{
    int t,n;
    map<string,int> m;
    cin>>t;
    string s;
    while(t--)
    {
        cin>>n;
        cin>>s;
        if(n==1)
        {
           int a;
           cin>>a;
           m[s]+=a; 
        }
        else if(n==2)
        {
            m[s]=0;
        }
        else
        {
            cout<<m[s]<<endl;
        }
    }
    
    return 0;
}



