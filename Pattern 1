#include <stdio.h>

int main()
{
    int i, j, n,sum;
    scanf("%d", &n);
    printf("*\n");
    for(i=1;i<=n;i++)
    {
        sum=1;
        printf("*");
        for(j=1;j<=((2*i)-1);j++)
        {
            printf("%d",sum);
            if(j<i)
            {
                sum=sum+1;
            }
            else if(j>=i)
            sum=sum-1;
        }
        printf("*\n");
    }
    for(i=n-1;i>=1;i--)
    {
        printf("*");
        sum=1;
        for(j=1;j<=((2*i)-1);j++)
        {
            printf("%d",sum);
            if(j<i)
            {
                sum=sum+1;
            }
            else if(j>=i)
            sum=sum-1;
        }
        printf("*\n");
    }
    
    printf("*");

    return 0;
}

input:3
output:
*
*1*
*121*
*12321*
*121*
*1*
*

