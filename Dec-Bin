#include<stdio.h>
int res[4];
void dec_to_bin(int n,int i)
{
    if(n>0)
    {
        res[i]=n%2;
        i++;
        dec_to_bin(n/2,i);
    }
}

int main()
{
    int n,i;
    scanf("%d",&n);
    dec_to_bin(n,0);
    for(i=3;i>=0;i--)
    printf("%d",res[i]);
    return 0;
}

//input-10
//output-1010
